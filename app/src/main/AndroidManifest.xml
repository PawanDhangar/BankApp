<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pawan.TheSparksBank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApnaBank">
        <activity
            android:name="com.pawan.TheSparksBank.SplashScreen"
            android:screenOrientation="portrait"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pawan.TheSparksBank.TransactionDetails"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.pawan.TheSparksBank.CustomerList"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.pawan.TheSparksBank.CustomerDetails"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.pawan.TheSparksBank.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
    </application>

</manifest>